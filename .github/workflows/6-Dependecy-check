name: Security Scan
on:
  #push:
  #  branches: [main,test]
  pull_request:
  #  branches: [main,test,soc-test]

jobs:
  dependency-review:
    runs-on: ubuntu-latest
    permissions:
        contents: read
        pull-requests: write
        security-events: write
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v6
        with:
          fetch-depth: 0

      - name: Dependency Review
        uses: actions/dependency-review-action@v4
        id: deprev
        with:
          fail-on-severity: low
          deny-licenses: GPL-2.0, LGPL-2.1
          comment-summary-in-pr: always
      #    base-ref: 'main'        # The stable branch
       #   head-ref: ${{ github.sha }} # The current commit you just pushed

 #     - name: Upload SARIF as an Artifact
 #       uses: actions/upload-artifact@v5
 #       with:
 #         name: dependecy-check
  #        path: ${{ steps.deprev.outputs.dependency-changes }}
